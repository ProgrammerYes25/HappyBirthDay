<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/purple_300"
                android:endColor="@color/light_purple_100"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/light_purple_85" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>