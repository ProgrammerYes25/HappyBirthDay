<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/profile_icon"
    android:layout_gravity="right"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birthday_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"/>
</FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toggle_background"
    android:layout_marginStart="8dp"
    android:layout_marginTop="60dp"
    android:layout_gravity="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/method1TV"
    android:layout_marginLeft="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/deco_text"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/dongle_regular"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:background="@drawable/decotext_background"
        tools:ignore="Rt|Symmetry"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/my_card_text"
        android:gravity="center"
        android:fontFamily="@font/dongle_regular"
        android:textSize="24sp"
        android:paddingTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"/>

</LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_rounded_small_corner"
        android:layout_gravity="center"
        android:layout_marginTop="350dp"
        android:text="@string/add_link_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="25sp"
        />



</LinearLayout>