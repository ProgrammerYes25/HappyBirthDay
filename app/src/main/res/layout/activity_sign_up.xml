<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garland_backgroud"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:fontFamily="@font/dongle_regular"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/input_nickname_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/input_id_text"
        android:textSize="22sp"
        android:fontFamily="@font/dongle_regular"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/input_pin_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/check_pin_text"
        android:fontFamily="@font/dongle_regular"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_rounded_corner"
            android:textSize="25sp"
            android:text="    2023"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_text"
            android:textSize="22sp"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_rounded_corner"
            android:textSize="25sp"
            android:text="      01"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_text"
            android:textSize="22sp"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_rounded_corner"
            android:textSize="25sp"
            android:text="      01"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_text"
            android:textSize="22sp"
            android:fontFamily="@font/dongle_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:textSize="22sp"
        android:fontFamily="@font/dongle_regular"
        android:layout_gravity="center"
        android:text="@string/signin_text"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_text"
        android:textSize="22sp"
        android:fontFamily="@font/dongle_regular"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>