<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".CakeMakePageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:orientation="vertical">
        <!--케이크 꾸미기 설명-->
        <TextView
            android:id="@+id/cake_make_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular"
            android:text="@string/make_cake1_text"/>
        <TextView
            android:id="@+id/cerd_make_subtitle_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:fontFamily="@font/notosans_regular"
            android:text="@string/make_cake2_text"/>
        <!--케이크 레이아웃-->
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="455dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/main_cake"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cake_make_Linear_Layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">
                <!--케이크 3충 레이아웃-->
                <LinearLayout
                    android:id="@+id/the_4th_floor_cake_linear_layout"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decorative2_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/img_decorative_example" />
                </LinearLayout>
                <!--케이크 2충 레이아웃-->
                <LinearLayout
                    android:id="@+id/the_3rd_floor_cake_linear_layout"
                    android:layout_width="230dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decorative4_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/img_decorative_example" />

                    <ImageView
                        android:id="@+id/decorative5_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/img_decorative_example" />
                </LinearLayout>
                <!--케이크 1충 레이아웃-->
                <LinearLayout
                    android:id="@+id/the_second_floor_cake_linear_layout"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decorative6_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/img_decorative_example" />

                    <ImageView
                        android:id="@+id/decorative7_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/img_decorative_example" />

                    <ImageView
                        android:id="@+id/decorative8_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/img_decorative_example" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--케이크 페이지 텍스트 뷰-->
        <TextView
            android:id="@+id/page_num_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="1/2"
            android:textColor="@color/purple_750"
            android:textSize="20sp" />
    </LinearLayout>
    <!--장식 달기 버튼-->
    <TextView
        android:id="@+id/decoration_button_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_resource_activation"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/decoration2_text"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>