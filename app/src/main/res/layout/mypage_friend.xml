<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/rectangle_rounded_corner_20"
    android:id="@+id/mypage_friend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="360dp"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양지혜"
            android:paddingStart="80dp"
            android:textColor="#585062"
            android:textSize="16sp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="left"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/main_profile"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/year_text"
            android:textColor="#9E97A7"
            android:fontFamily="@font/notosans_regular"
            android:textSize="14sp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="113dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_text"
            android:fontFamily="@font/notosans_regular"
            android:textColor="#9E97A7"
            android:textSize="14sp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="143dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_text"
            android:textColor="#9E97A7"
            android:fontFamily="@font/notosans_regular"
            android:textSize="14sp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="173dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_delete_button"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"/>
    </FrameLayout>




</LinearLayout>