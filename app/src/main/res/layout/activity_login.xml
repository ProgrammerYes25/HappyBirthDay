<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/garland_backgroud"
    tools:context=".LoginActivity">

    <!--가랜드 백그라운드에 넣지 않고 따로 넣었을 때-->
    <!--<ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="top|center"
        android:src="@drawable/garland"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="@string/app_name"
        android:fontFamily="@font/notosans_regular"
        android:textStyle="bold"
        android:layout_gravity="top|center"
        android:layout_marginTop="110dp"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/id_text"
        android:fontFamily="@font/notosans_regular"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="18dp"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="@string/pin_text"
        android:textSize="22sp"
        android:fontFamily="@font/notosans_regular"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="@string/login_text"
        android:background="@drawable/rectangle_rounded_corner"
        android:textSize="22sp"
        android:fontFamily="@font/notosans_regular"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"/>
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:fontFamily="@font/notosans_regular"
        android:text="@string/signin_text"
        />



</LinearLayout>