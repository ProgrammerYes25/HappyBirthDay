<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".AwardMakeWritingPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle_resource_black_300"
       >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="3"
            android:padding="20dp"
            android:hint="@string/award_title_hint_text"
            android:background="@drawable/rectangle_resource_black_50" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="20dp"
            android:hint="@string/award_text_hint_text"
            android:background="@drawable/rectangle_resource_black_50"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="3"
            android:padding="20dp"
            android:hint="@string/award_title_hint_text"
            android:background="@drawable/rectangle_resource_black_50" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_weight="9">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black_600"
            android:textSize="17sp"
            android:background="@drawable/rectangle_resource_black_300"
            android:text="@string/make_award_choice_text"/>
    </LinearLayout>
</LinearLayout>