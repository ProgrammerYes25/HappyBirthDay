<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".AwardMakeWritingPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle_resource_black_300"
        android:layout_weight="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="3"
            android:padding="20dp"
            android:hint="@string/to_hint_text"
            android:background="@drawable/rectangle_resource_black_50" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="20dp"
            android:hint="@string/rolling_paper_hint_text"
            android:background="@drawable/rectangle_resource_black_50"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="3"
            android:padding="20dp"
            android:hint="@string/form_hint_text"
            android:background="@drawable/rectangle_resource_black_50"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/black_600"
                android:textSize="17sp"
                android:background="@drawable/rectangle_left_resource_black_300"
                android:text="<"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_600"
                android:textSize="17sp"
                android:background="@drawable/rectangle_basics_resource_black_300"
                android:text="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/black_600"
                android:textSize="17sp"
                android:background="@drawable/rectangle_right_resource_black_300"
                android:text=">"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_600"
            android:textSize="17sp"
            android:background="@drawable/rectangle_resource_black_300"
            android:text="@string/decoration_text"/>
    </LinearLayout>
</LinearLayout>