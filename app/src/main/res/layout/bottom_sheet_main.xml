<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/rectangle_resource_activation_bottom"
    android:layout_gravity="center_horizontal|bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="290dp"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bottom_sheet_share"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="링크 공유"
                android:layout_gravity="left"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="80dp"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:textColor="#575062" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bottom_sheet_hide"
            android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숨김"
                android:layout_marginLeft="188dp"
                android:layout_marginTop="80dp"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:textColor="#575062" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bottom_sheet_delete"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:layout_gravity="right"
                android:layout_marginRight="63dp"
                android:layout_marginTop="80dp"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:textColor="#575062" />
        </FrameLayout>

            <TextView
                android:text="취소"
                android:textSize="18dp"
                android:id="@+id/tv_cancel"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/notosans_regular"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:textColor="#F9FAFB"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_resource_activation"/>




</LinearLayout>