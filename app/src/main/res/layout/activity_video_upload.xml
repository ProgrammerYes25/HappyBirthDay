<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".VideoUploadActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="33sp"
        android:fontFamily="@font/dongle_regular"
        android:text="@string/make_video1_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="27sp"
        android:fontFamily="@font/dongle_regular"
        android:text="@string/make_video2_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_video_resource">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_video_resource_black_200">
                <ImageView
                    android:id="@+id/upload_icon_image_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/upload_icon_image_view1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dongle_regular"
                    android:textSize="25sp"
                    android:text="@string/make_video3_text"/>
            </RelativeLayout>
       <!--     <VideoView
                android:id="@+id/upload_video1_video_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />-->
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_video_resource">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_video_resource_black_200">
                <ImageView
                    android:id="@+id/upload_icon_image_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/upload_icon_image_view2"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dongle_regular"
                    android:textSize="25sp"
                    android:text="@string/make_video3_text"/>
            </RelativeLayout>
            <!--     <VideoView
                     android:id="@+id/upload_video2_video_view"
                     android:layout_width="match_parent"
                     android:layout_height="150dp"
                     />-->
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_video_resource">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_video_resource_black_200">
                <ImageView
                    android:id="@+id/upload_icon_image_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/upload_icon_image_view3"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dongle_regular"
                    android:textSize="25sp"
                    android:text="@string/make_video3_text"/>
            </RelativeLayout>
            <!--     <VideoView
                     android:id="@+id/upload_video3_video_view"
                     android:layout_width="match_parent"
                     android:layout_height="150dp"
                     />-->
        </FrameLayout>
    </LinearLayout>
</LinearLayout>