<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/rectangle_resource_activation_bottom"
    android:layout_gravity="center_horizontal|bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="290dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/back_button"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:fontFamily="@font/notosans_regular"
            android:textSize="18sp"
            android:textColor="#575062"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'예서'님의 카드를"
            android:textColor="#28242D"
            android:fontFamily="@font/notosans_regular"
            android:textSize="18sp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 삭제"
            android:textColor="#FE534A"
            android:fontFamily="@font/notosans_regular"
            android:textSize="18sp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하시겠습니까?"
            android:textColor="#28242D"
            android:fontFamily="@font/notosans_regular"
            android:textSize="18sp"
            android:layout_marginTop="60dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp">


        <TextView
            android:text="취소"
            android:textSize="18sp"
            android:id="@+id/btnCancle"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/notosans_regular"
            android:textColor="#9E97A7"
            android:background="@drawable/rectangle_rounded_corner_dialog_button"
            android:gravity="center"
            />
        <TextView
            android:text="예"
            android:textSize="18sp"
            android:id="@+id/btnSave"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosans_regular"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#F1F2FF"
            android:background="@drawable/rectangle_resource_activation_radadd"/>
    </LinearLayout>





</LinearLayout>