<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_shortcut_ll"
    android:background="@drawable/rectangle_rounded_corner_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="230dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/main_menu"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="15dp"
        android:src="@drawable/main_menu"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@drawable/main_cake"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#575062"
        android:text="to.지혜이무니다"
        android:background="@null"
        android:focusable="false"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/notosans_regular"
        />

    <EditText
        android:id="@+id/tv_name_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center_horizontal"
        android:text="양지혜 10월 12일"
        android:textColor="#9E97A7"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>